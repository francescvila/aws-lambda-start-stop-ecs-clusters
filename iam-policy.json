{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Effect": "Allow",
          "Action": [
              "logs:CreateLogGroup",
              "logs:CreateLogStream",
              "logs:PutLogEvents"
          ],
          "Resource": "arn:aws:logs:*:*:*"
      },
      {
          "Effect": "Allow",
          "Action": [
              "ecs:ListClusters",
              "ecs:ListTagsForResource",
              "ecs:ListServices",
              "ecs:UpdateService",
              "application-autoscaling:DescribeScalableTargets"
          ],
          "Resource": "*"
      }
  ]
}